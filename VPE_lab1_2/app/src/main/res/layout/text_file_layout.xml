<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/text_file_input"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:ems="10"
        android:gravity="start"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/text_file_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/text_file_save"
        android:textColor="@color/main_btns_text_color"
        android:onClick="saveText" />

    <TextView
        android:id="@+id/text_file_output"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/text_file_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/text_file_open"
        android:textColor="@color/main_btns_text_color"
        android:onClick="openFile" />

</LinearLayout>